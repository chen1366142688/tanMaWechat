/* pages/Timetable/Course-record/Course-record.wxss */
page {
  background-color: #ececec;
}

.Course-record{
  width: 750rpx;
  line-height: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-color: #fff; */
}
.addBtn{
  width:360rpx;
  height:88rpx;
  background:rgba(0,198,147,1);
  border-radius:44rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom:60rpx;
  left:195rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin-top: 60rpx;
}
.Course-record-one{
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-bottom: 1rpx solid #e4e4e4;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.Course-record-one-left{
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  align-items: center;
  display: flex;
  justify-content: center;
}

.head-portrait{
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
}

.Course-record-one-right{
  width: 590rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
}

.Course-record-one-right-top{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.Course-record-top-left{
  width: 210rpx;
  height: 30rpx;
  line-height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.Course-record-top-left-name{
  max-width: 150rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}


.Course-record-top-right{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.Course-record-top-right-YTD{
  font-size: 28rpx;
  color: #999;
}


.Course-record-one-right-bottom{
  width: 590rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: left;
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.footerOver {
  width: 100%;
  height: 80rpx;
  font-family: PingFang-SC-Regular;
  color: #999;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 旷课 */
.Course-record-truant{
  width: 60rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  background-color: #FF6400;
  border-radius: 10rpx;
  margin-left: 10rpx;
}
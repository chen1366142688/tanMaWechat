/* pages/index/expense-settlement/expense-settlement.wxss */

page {
  background: #e4e4e4;
}

.header{
  width: 750rpx;
  height: 160rpx;
  overflow: hidden;
  display: block;
  background-color: rgba(255, 255, 255, 1);
  border-top: 1rpx solid #e4e4e4;
}
.Pay-header {
  width: 750rpx;
  height: 75rpx;
  line-height: 75rpx;
  color: #333;
  font-size: 30rpx;
  padding-left: 20rpx;
  font-weight: bold;
}

/*  费用提示  */

.Hint-expense {
  width: 750rpx;
  height: 33rpx;
  line-height: 33rpx;
  color: #333;
  font-size: 22rpx;
  margin-left: 20rpx;
}

.Hint-member-price {
  width: 750rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #e40011;
  font-size: 22rpx;
  margin-left: 20rpx;
}


.Hard {
  background: #fff;
  width: 750rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1rpx solid #e4e4e4;
  padding-left: 20rpx;
}

.Hard .designation {
  width: 480rpx;
  height: 88rpx;
  color: #333;
  font-size: 30rpx;
  float: left;
}

.Hard .select {
  width: 270rpx;
  height: 88rpx;
  float: right;
  text-align: center;
  right: 20rpx;
  margin: 0 auto;
  line-height: 88rpx;
}

.select .select_text {
  display: block;
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  float: left;
  margin: 0 auto;
  color: #333;
  font-size: 30rpx;
  text-align:right;
}

.select .select_img {
  width: 11rpx;
  height: 6rpx;
  line-height: 88rpx;
  margin: 0 auto;
  float: right;
  margin-right: 40rpx;
  margin-top: 40rpx;
}



/*  费用结算  */

.expense-settlement {
  width: 750rpx;
  margin: 0rpx;
  padding: 0rpx;
}

.expense-settlement .closing-cost {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  width: 750rpx;
  text-align: center;
  margin-top: 20rpx;
}

.expense-settlement-discounts {
  width: 750rpx;
  height: 102rpx;
  background-color: #fff;
  color: #333;
  line-height: 102rpx;
}

.original-cost {
  width: 750rpx;
  height: 35rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 35rpx;
  padding-top: 20rpx;
}

.original-cost-headline {
  width: 400rpx;
  height: 35rpx;
  float: left;
  margin-left: 20rpx;
}

.original-cost-money {
  width: 310rpx;
  height: 35rpx;
  float: right;
  margin-right: 20rpx;
  text-align:right;
}

.discounts {
  width: 750rpx;
  height: 35rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 35rpx;
}

.discounts-headline {
  width: 400rpx;
  height: 35rpx;
  float: left;
  margin-left: 20rpx;
}

.discounts-money {
  width: 310rpx;
  height: 35rpx;
  float: right;
  margin-right: 20rpx;
  text-align:right;
}

.All-in-cost {
  width: 750rpx;
  height: 77rpx;
  line-height: 77rpx;
  color: #333;
  font-size: 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #e4e4e4;
}

.All-in-cost-headline {
  width: 400rpx;
  height: 77rpx;
  float: left;
  margin-left: 20rpx;
}

.All-in-cost-money {
  width: 310rpx;
  height: 51rpx;
  float: right;
  line-height: 51rpx;
  margin-right: 20rpx;
  font-family: SanFranciscoDisplay-Bold;
  font-weight: Bold;
  color: #E40011;
  margin-top: 11rpx;
  text-align:right;
}

.All-in-cost-money .van-rmbb-smal {
  font-size: 18rpx;
}

.All-in-cost-money .van-rmbc {
  font-size: 34rpx;
  padding-left: 9rpx;
}

/*结算  */

.settle-accounts {
  width: 702rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-image: url('http://xlrtimo.oss-cn-beijing.aliyuncs.com/timo/imgs/coach/public/button.png');
  background-size:100% 100%;
  background-color: #007587;
  border-radius: 40rpx;
  position: fixed;
  bottom: 20rpx;
  margin-left: 23rpx;
  color: #fff;
  font-size: 30rpx;
  border: 1rpx dotted #fff;
}

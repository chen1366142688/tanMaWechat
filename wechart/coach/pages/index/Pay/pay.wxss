/* pages/index/Pay/pay.wxss */

page {
  background: #e4e4e4;
}

.Pay-header {
  width: 750rpx;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 1);
  border-top: 1rpx solid #e4e4e4;
  line-height: 88rpx;
  color: #333;
  font-size: 30rpx;
  padding-left: 20rpx;
}

.Hard {
  background: #fff;
  width: 750rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1rpx solid #e4e4e4;
  padding-left: 20rpx;
}

.Hard .designation {
  width: 480rpx;
  height: 88rpx;
  color: #333;
  font-size: 30rpx;
  float: left;
}

.Hard .select {
  width: 270rpx;
  height: 88rpx;
  float: right;
  text-align: center;
  right: 20rpx;
  margin: 0 auto;
  line-height: 88rpx;
}

.select .select_text {
  display: block;
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  float: left;
  margin: 0 auto;
  color: #333;
  font-size: 30rpx;
  text-align: right;
}

.select .select_img {
  width: 11rpx;
  height: 6rpx;
  line-height: 88rpx;
  margin: 0 auto;
  float: right;
  margin-right: 50rpx;
  margin-top: 40rpx;
}

/*  费用提示  */

.Hint {
  width: 750rpx;
  height: 101rpx;
  background-color: #e4e4e4;
  margin: 0 auto;
}

.Hint .Hint-expense {
  color: #333;
  font-size: 22rpx;
  margin-left: 20rpx;
}

.Hint .Hint-member-price {
  color: #e40011;
  font-size: 22rpx;
}

/*  费用结算  */

.expense-settlement {
  width: 750rpx;
  margin: 0rpx;
  padding: 0rpx;
}

.expense-settlement .closing-cost {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  width: 750rpx;
  text-align: center;
}

.expense-settlement-discounts {
  width: 750rpx;
  height: 102rpx;
  background-color: #fff;
  color: #333;
}

.original-cost {
  width: 750rpx;
  height: 51rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 51rpx;
}

.original-cost-headline {
  width: 400rpx;
  height: 51rpx;
  float: left;
  margin-left: 20rpx;
}

.original-cost-money {
  width: 310rpx;
  height: 51rpx;
  float: right;
  margin-right: 20rpx;
  text-align: right;
}

.discounts {
  width: 750rpx;
  height: 51rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 51rpx;
}

.discounts-headline {
  width: 400rpx;
  height: 51rpx;
  float: left;
  margin-left: 20rpx;
}

.discounts-money {
  width: 310rpx;
  height: 51rpx;
  float: right;
  margin-right: 20rpx;
  text-align: right;
}

.All-in-cost {
  width: 750rpx;
  height: 77rpx;
  line-height: 77rpx;
  color: #333;
  font-size: 24rpx;
  background-color: #fff;
  border-top: 1rpx solid #e4e4e4;
}

.All-in-cost-headline {
  width: 400rpx;
  height: 77rpx;
  float: left;
  margin-left: 20rpx;
}

.All-in-cost-money {
  width: 310rpx;
  height: 51rpx;
  float: right;
  line-height: 51rpx;
  margin-right: 20rpx;
  font-family: SanFranciscoDisplay-Bold;
  font-weight: Bold;
  color: #ff5571;
  margin-top: 11rpx;
  text-align: right;
}

.All-in-cost-money .van-rmbb-smal {
  font-size: 18rpx;
}

.All-in-cost-money .van-rmbc {
  font-size: 34rpx;
  padding-left: 9rpx;
}

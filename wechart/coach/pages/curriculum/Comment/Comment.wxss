/*  下拉  */

.select_box{
  background: #fff;
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
  z-index: 555;
}
.select{
  box-sizing: border-box;
  width: 100rpx;
  height: 70rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
  float: left;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.select_img{
  width: 11rpx;
  height: 6rpx;
  line-height: 90rpx;
  display: block;
  margin-top: 50rpx;
  float: right;
  margin-left: 20rpx;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 90rpx;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 8888;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}
  height: 88rpx;
  border-radius: 44rpx;
  position: fixed;
  bottom: 60rpx;
  left: 24rpx;
}

.submit {
  width: 694rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-image: url('http://xlrtimo.oss-cn-beijing.aliyuncs.com/timo/imgs/coach/public/button.png');

/* pages/curriculum/curriculumDetail/curriculumDetail.wxss */
.curriculumDetail{
  min-height: 100%;
  background: white;
  padding: 0 27rpx 300rpx;
  position: relative;
  box-sizing: border-box;
}
page{
  height: 100%;
}
.curriculumDetail .header .top{
  display: flex;
  height: 120rpx;
  align-items: center;
  justify-content: space-between
}
.curriculumDetail .header .title{
  width: 502rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size:30rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.invitation{
width:180rpx;
height:60rpx;
display: flex;
display: -webkit-flex;
justify-content: center;
background: -webkit-linear-gradient(left top, #00D1E0 , #00B6D6); 
background: -o-linear-gradient(bottom right, #00D1E0, #00B6D6); 
background: -moz-linear-gradient(bottom right, #00D1E0, #00B6D6); 
background: linear-gradient(to bottom right, #00D1E0 , #00B6D6);
box-shadow:0rpx 0rpx 6rpx rgba(0,130,153,0.7);
align-items: center;
border-radius: 60rpx;
}
.invitationImg{
width: 30rpx;
height:30rpx;
margin-right:15rpx;
}
.invitation text{
font-size:20rpx;
font-family:PingFang-SC-Bold;
font-weight:bold;
color:rgba(255,255,255,1);
}

.curriculumDetail .header .bot{
  display: flex;
  color : RGBA(153, 153, 153, 1);
  font-size: 24rpx;
  padding-bottom: 39rpx;
}
.curriculumDetail .header .bot view{
  margin-right: 41rpx;
  width: 180rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  
}
.curriculumDetail .header .bot image{
  width: 22rpx;
  height: 22rpx;
}

.curriculumDetail .main{
  width: 100%;
  background: RGBA(244, 244, 244, 1);
  padding: 26rpx 20rpx 0rpx;
  box-sizing: border-box;
}
.curriculumDetail .main .title{
  color: RGBA(0, 117, 135, 1);
  font-size: 28rpx;
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid white;
}
.curriculumDetail .mainlist{
  padding: 30rpx 0;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
}
.curriculumDetail .mainlist2{
  padding: 30rpx 0;
  font-size: 26rpx;
  text-align: center;
}
.curriculumDetail .mainlist .listname{
  width: 280rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.curriculumDetail .mainlist .listname text{
  font-size: 22rpx;
  background: RGBA(203, 203, 203, 1);
  padding: 3rpx 9rpx;
  color: white;
  border-radius: 6rpx;
  display: inline-block;
  margin-left:14rpx;
}
.curriculumDetail .mainlist .listphone{
  width: 180rpx;
}
.curriculumDetail .mainlist .truant{
  color : RGBA(0, 182, 214, 1)
}
.curriculumDetail .mainlist  .truant2{
  width: 139rpx;
  text-align: right;
  color : RGBA(0, 182, 214, 1)
}
.curriculumDetail .mainlist .listfun{
  color: RGBA(0, 117, 135, 1);
  font-size: 24rpx;
}
.curriculumDetail .addstu{
  position: fixed;
  right: 24rpx;
  bottom: 157rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  overflow: hidden;
  background: RGBA(0, 209, 224, 1);
  color: white;
  font-size: 30rpx;
  line-height: 45rpx;
  text-align: center;
  padding-top: 15rpx;
  box-sizing: border-box; 
  box-shadow:0px 0px 6rpx rgba(0,209,224,0.7);
}
.curriculumDetail .btn{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 88rpx;
  display: flex;
  width: 100%;

}
.curriculumDetail .btn .left{
  background: RGBA(244, 244, 244, 1);
  text-align: center;
  font-size: 30rpx;
  color: RGBA(0, 117, 135, 1);
  width: 50%;
  line-height: 88rpx;
}
.curriculumDetail .btn .right{
  background: RGBA(0, 117, 135, 1);
  text-align: center;
  font-size: 30rpx;
  color: white;
  width: 50%;
  line-height: 88rpx;
}

.mock{
  background: RGBA(41, 38, 39, 0.3);
  position: fixed;
  z-index: 9;
  width: 100%;
  height: 100%;
  top: 0;
}
.mock .main{
  width: 100%;
  height: 482rpx;
  background: white;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.mock .bot{
  height: 88rpx;
  display: flex;
  width: 100%;
}
.mock .bot .cancel{
  background: RGBA(244, 244, 244, 1);
  text-align: center;
  font-size: 30rpx;
  color: RGBA(0, 117, 135, 1);
  width: 50%;
  line-height: 88rpx;
}
.mock .bot .sure{
  background: RGBA(0, 117, 135, 1);
  text-align: center;
  font-size: 30rpx;
  color: white;
  width: 50%;
  line-height: 88rpx;
}
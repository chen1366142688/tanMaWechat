.Training {
  width: 100%;
  line-height: 0;
  margin: 0;
  padding: 0;
}

.Training-video {
  width: 100%;
  height: 5.626667rem;
  line-height: 5.626667rem;
  vertical-align: middle;
  margin-bottom: 0.533333rem;
}

.Training-control {
  width: 100%;
  height: 100%;
  vertical-align: middle;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.Training-control-volume {
  width: 100%;
  height: 0.8rem;
  line-height: 0.8rem;
  vertical-align: middle;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0.306667rem;
  box-sizing: border-box;
}

.Training-control-volume-reduce {
  width: 1.066667rem;
  height: 0.8rem;
  line-height: 0.8rem;
  vertical-align: middle;
}

.volume-background {
  width: 6.666667rem;
  height: 0.8rem;
  line-height: 0.8rem;
  background-color: #ececec;
}

.volume-gradual-change {
  width: 50%;
  height: 0.8rem;
  line-height: 0.8rem;
  background: -webkit-linear-gradient(left, rgba(77,208,200,0.3), rgba(77,208,200,1));
  /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, rgba(77,208,200,0.3), rgba(77,208,200,1));
  /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, rgba(77,208,200,0.3), rgba(77,208,200,1));
  /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, rgba(77,208,200,0.3), rgba(77,208,200,1));
  /* 标准的语法（必须放在最后） */
}

.Training-control-volume-increase {
  width: 1.066667rem;
  height: 0.8rem;
  line-height: 0.8rem;
  vertical-align: middle;
}

.Training-Pause {
  width: 100%;
  height: 7.253333rem;
  line-height: 7.253333rem;
  vertical-align: middle;
  display: flex;
  align-items: center;
  justify-content: center;
}

.Training-Pause-background {
  width: 4.266667rem;
  height: 4.266667rem;
  vertical-align: middle;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(77,208,200,0.3);
}

.pauseBox {
  display: none;
}

.Training-Pause-beijing {
  width: 3.733333rem;
  height: 3.733333rem;
  vertical-align: middle;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(77,208,200,1);
}

.Abeyancd {
  width: 1.066667rem;
  height: 1.066667rem;
  line-height: 1.066667rem;
  vertical-align: middle;
}

.Play {
  width: 1.066667rem;
  height: 1.066667rem;
  line-height: 1.066667rem;
  vertical-align: middle;
}

.Training-button {
  width: 100%;
  height: 1.066667rem;
  line-height: 1.066667rem;
  vertical-align: middle;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0.32rem;
  box-sizing: border-box;
}

.Training-button-left {
  width: 3.2rem;
  height: 1.04rem;
  line-height: 1.04rem;
  text-align: center;
  vertical-align: middle;
  background-color: #fff;
  color: #4DD0C8;
  border: 0.013333rem solid #4DD0C8;
  border-radius: 0.533333rem;
  font-size: 0.4rem;
}

.Training-button-right {
  width: 5.466667rem;
  height: 1.04rem;
  line-height: 1.04rem;
  text-align: center;
  vertical-align: middle;
  background-color: #4DD0C8;
  color: #fff;
  border: 0.013333rem solid #4DD0C8;
  border-radius: 0.533333rem;
  font-size: 0.4rem;
}

.kong {
  width: 100%;
  height: 0.8rem;
  background-color: #fff;
}

#video1 {
  width: 100%;
  height: 10rem;
  margin-bottom: 0.28rem;
}

.btnGroup {
  position: absolute;
  top: 4.2rem;
  left: 4.2rem;
  width: 1.6rem;
  height: 1.6rem;
}

.btnImg,
.puse {
  width: 1.6rem;
  height: 1.6rem;
}

.puse {
  display: none;
}
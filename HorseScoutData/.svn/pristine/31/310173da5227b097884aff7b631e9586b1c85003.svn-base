
.Training {
    width: 100%;
    line-height: 0;
    margin: 0;
    padding: 0;
}

.Training-video {
    width: 100%;
    height: 422px;
    line-height: 422px;
    vertical-align: middle;
    margin-bottom: 40px;
}

.Training-control {
    width: 100%;
    height: 100%;
    vertical-align: middle;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.Training-control-volume {
    width: 100%;
    height: 60px;
    line-height: 60px;
    vertical-align: middle;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 23px;
    box-sizing: border-box;
}

.Training-control-volume-reduce {
    width: 80px;
    height: 60px;
    line-height: 60px;
    vertical-align: middle;
}

.volume-background {
    width: 500px;
    height: 60px;
    line-height: 60px;
    background-color: #ececec;
}

.volume-gradual-change {
    width: 50%;
    height: 60px;
    line-height: 60px;
    background: -webkit-linear-gradient(left, rgba(77,208,200,0.3), rgba(77,208,200,1)); /* Safari 5.1 - 6.0 */
    background: -o-linear-gradient(right, rgba(77,208,200,0.3), rgba(77,208,200,1)); /* Opera 11.1 - 12.0 */
    background: -moz-linear-gradient(right, rgba(77,208,200,0.3), rgba(77,208,200,1)); /* Firefox 3.6 - 15 */
    background: linear-gradient(to right, rgba(77,208,200,0.3), rgba(77,208,200,1)); /* 标准的语法（必须放在最后） */
}

.Training-control-volume-increase {
    width: 80px;
    height: 60px;
    line-height: 60px;
    vertical-align: middle;
}

.Training-Pause{
    width: 100%;
    height: 544px;
    line-height: 544px;
    vertical-align: middle;
    display: flex;
    align-items: center;
    justify-content: center;
}

.Training-Pause-background{
    width: 320px;
    height: 320px;
    vertical-align: middle;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(77,208,200,0.3);
}
.pauseBox{display: none;}

.Training-Pause-beijing{
    width: 280px;
    height: 280px;
    vertical-align: middle;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: rgba(77,208,200,1);
}

.Abeyancd{
    width: 80px;
    height: 80px;
    line-height: 80px;
    vertical-align: middle;
}

.Play{
    width: 80px;
    height: 80px;
    line-height: 80px;
    vertical-align: middle;
}

.Training-button{
    width: 100%;
    height: 80px;
    line-height: 80px;
    vertical-align: middle;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:  0 24px;
    box-sizing: border-box;
}

.Training-button-left{
    width: 240px;
    height: 78px;
    line-height: 78px;
    text-align: center;
    vertical-align: middle;
    background-color: #fff;
    color: #4DD0C8;
    border: 1px solid #4DD0C8;
    border-radius: 40px;
    font-size: 30px;
}

.Training-button-right{
    width: 410px;
    height: 78px;
    line-height: 78px;
    text-align: center;
    vertical-align: middle;
    background-color: #4DD0C8;
    color: #fff;
    border: 1px solid #4DD0C8;
    border-radius: 40px;
    font-size: 30px;
}

.kong{
    width: 100%;
    height: 60px;
    background-color: #fff;
}
#video1{
    width:100%;
    height: 422px;
    margin-bottom:40px;
}
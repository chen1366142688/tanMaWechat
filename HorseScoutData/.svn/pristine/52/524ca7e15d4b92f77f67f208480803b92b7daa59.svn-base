/* pages/My/Bind-child.wxss */
.bindchild{
  
}

.bindchild .childbirth{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 23rpx;
  height: 120rpx;
  background: white;
  margin-bottom: 1rpx; 
} 
.bindchild .Year-month-day{
  display: flex;
  flex: 1;
  align-items: center;
}
.bindchild .section-pull-down{
  width: 16rpx;
  height: 16rpx;
}

.section-time{
  color: RGBA(77, 208, 200, 1)
}

.childname{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 23rpx;
  height: 120rpx;
  background: white;
  margin-bottom: 4rpx; 
}
.childname .childsex{
  width: 88rpx;
  /* border-right: 1rpx solid RGBA(77, 208, 200, 1) */
}
.childsex .section-pull-down{
  margin-left: 21rpx
}

.childname .childreal{
  flex: 1;
  margin-left: 22rpx;
}

.bindchild .childcode{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 23rpx;
  height: 120rpx;
  background: white;
  margin-bottom: 10rpx; 
}

.bindchild .childcode view:nth-child(1){
  padding-right: 23rpx;
  /* border-right: 1rpx solid RGBA(77, 208, 200, 1) */
}
.childinfo{
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 0 23rpx;
  height: 200rpx;
  background: white;
  margin-bottom: 10rpx; 
  font-size: 30rpx;
}
.childinfo-letf{
  display: flex;
  align-items: center
}
.childinfo-first{
  display: flex;
  justify-content: space-between;
  height: 86rpx;
  line-height: 86rpx;
  align-items: center;
  width: 100%;
}
.realname{
  margin-right: 10rpx;
}
.Name-gender-img{
  width: 30rpx;
  height: 30rpx;
}
.verification{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 99;
  top:0;
  background: RGBA(41, 38, 39, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
}
.verification .verification-box{
  background: white;
  width: 500rpx;
  height: 660rpx;
  border-radius: 30rpx;
  padding: 0 61rpx;
  box-sizing: border-box;
}
.verification-title{
  text-align: center;
  padding: 28rpx 0 58rpx;
  font-size: 30rpx;
}
.clear-icon{
  background: RGBA(203, 203, 203, 1);
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  float: right;
}
.verification-main{
  font-size: 24rpx;
  line-height: 36rpx;
  text-align:justify;
  margin-bottom: 43rpx;
}
.verification-info{
  display: flex;
  width: 100%;
  white-space: nowrap;
  margin-bottom: 70rpx;
}
.verification-one{
  background: RGBA(203, 203, 203, 1);
  width: 160rpx;
  height: 60rpx;
  border-radius: 60rpx;
  color: white;
  font-size: 24rpx;
  text-align: center;
  white-space: nowrap;
  display: inline-block;
  margin-right: 20rpx;
}
.verification-one view:nth-child(2){
  font-size: 18rpx;
}
.checkthis{
  background: RGBA(77, 208, 200, 1);
}
.verification-input{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid RGBA(153, 153, 153, 1);
  margin-bottom: 60rpx;
}
.verification input{
  color: RGBA(51, 51, 51, 1);
  font-size: 28rpx;
  text-align: center;
  width: 235rpx;
}

.verification-input view{
  font-size: 24rpx;
  color: RGBA(77, 208, 200, 1);
}
.istime{
  color: RGBA(203, 203, 203, 1) !important;
}
.pushcode{
  width: 380rpx;
  height: 80rpx;
  background: RGBA(203, 203, 203, 1);
  color: white;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 80rpx;
}
.iscode{
  background: RGBA(77, 208, 200, 1)
}

.Baike {
  width: 100%;
  line-height: 0;
  margin-bottom: 0.266667rem;
  padding: 0;
}

.select {
  border-bottom: 0.013333rem solid #4DD0C8;
  color: #4DD0C8;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
}

.Baike-header {
  width: 100%;
  height: 1.2rem;
  line-height: 1.2rem;
  background-color: #fff;
  border-bottom: 0.026667rem solid #e4e4e4;
  display: flex;
  align-items: center;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  overflow-x: scroll;
  white-space: nowrap;
}

.Switch {
  display: inline-block;
  width: 100%;
  height: 1.2rem;
  line-height: 1.2rem;
  vertical-align: middle;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: space-between;
  -webkit-justify-content: space-between;
}

.Switch-one-text {
  display: inline-block;
  height: 1.146667rem;
  line-height: 1.146667rem;
  vertical-align: middle;
  text-align: center;
  font-size: 0.4rem;
  margin: 0 0.626667rem;
  border-bottom: 0.013333rem solid transparent;
  color: #999999;
  cursor: pointer;
}

.active {
  border-bottom: 0.026667rem solid #4DD0C8;
  color: #4DD0C8;
}

.Switch-one {
  display: inline-block;
  width: 1.986667rem;
  height: 1.186667rem;
  line-height: 1.186667rem;
  vertical-align: middle;
  text-align: center;
  align-items: center;
  justify-content: center;
}

.Baike-section {
  width: 100%;
  margin: 0;
  padding: 0.493333rem 0.333333rem 0.8rem 0.333333rem;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 0.52rem;
  font-size: 0.346667rem;
  color: #171717;
}

.Baike-section-one {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.Baike-section p {
  width: 100%;
  line-height: 0.52rem;
  font-size: 0.346667rem;
  color: #171717;
}

.Baike-section p img {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
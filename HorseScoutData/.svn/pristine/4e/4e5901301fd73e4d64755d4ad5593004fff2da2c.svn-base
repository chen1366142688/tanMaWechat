/* pages/scoreInquiry/Add-New/Add-New.wxss */

.Add-New {
  width: 750rpx;
  margin: 0 auto;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
  line-height: 0;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.Add-New-Name {
  width: 100%;
  height: 100rpx;
  border-radius: 10rpx;
  padding: 0 21rpx;
  box-sizing: border-box;
  background-color: #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: center;
}

.Section-one-input {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
}

/* input提示文字 */

.input-cbcbcb {
  font-size: 28rpx;
  color: #999;
  border-bottom: 1rpx solid #02c7dc;
}

.Add-New-section {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  padding: 37rpx 21rpx;
  box-sizing: border-box;
  background-color: #f4f4f4;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.textpush {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

/* 提交结果 */

.Register-Submit-left {
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  margin-top: 60rpx;
  display: flex;
  position: fixed;
  bottom: 100rpx;
}

.Register-Submit-button {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  text-align: center;
  margin: 0 auto;
  font-size: 34rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #fff;
  background-color: rgba(2, 199, 220, 1);
  border-radius: 50rpx;
}

.textarea-cbcbcb {
  font-size: 28rpx;
  color: #999;
  border-bottom: 1rpx solid #02c7dc;
}

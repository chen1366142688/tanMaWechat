/* pages/My/Binding-Information/Binding-Information.wxss */
.Binding-Information{
  width: 750rpx;
  line-height: 0;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ID-number{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #e4e4e4;
}

.ID-number-input{
  width: 400rpx;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 28rpx;
  color: #333;
  vertical-align: middle;
  text-align: left;
}

.input-cbcb{
  font-size: 28rpx;
  color: #999;
}

.ID-number-search{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.Name-age{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  vertical-align: middle;
  padding: 0 25rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.Name-age-section{
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  vertical-align: middle;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e4e4e4;
}

.Name-age-left{
  height: 86rpx;
  line-height: 86rpx;
  vertical-align: middle;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.Name-age-left-Name{
  max-width: 180rpx;
  height: 86rpx;
  line-height: 86rpx;
  vertical-align: middle;
  font-size: 30rpx;
  color: #171717;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.Name-age-left-gender{
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.Name-age-right{
  max-width: 300rpx;
  height: 86rpx;
  line-height: 86rpx;
  vertical-align: middle;
  font-size: 30rpx;
  color: #171717;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.Prompt{
  width: 100%;
  height: 113rpx;
  line-height: 113rpx;
  vertical-align: middle;
  display: flex;
  align-items: center;
  padding: 0 25rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.Prompt-text{
  height: 113rpx;
  line-height: 113rpx;
  vertical-align: middle;
  font-size: 26rpx;
  color: #171717;
}

.Prompt-button{
  width: 120rpx;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  font-size: 30rpx;
  color: #4DD0C8;
  border: 1rpx solid #4DD0C8;
  border-radius: 30rpx;
  margin: 0 10rpx;
}

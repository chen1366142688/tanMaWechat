page {
    width: 100%;
    height: 100%;
}
.pg-box {
    width: 100%;
    height: 100%;
    padding-bottom: 50rpx;
    background: #ececec;
}

/**** banner-start ****/
.pg-banner-box {
    padding: 28rpx 0 0 12rpx;
    height: 200rpx;
}
.pg-banner {
    border-radius: 20rpx;
    box-shadow:0px 0px 0px rgba(0, 0, 0, 0.4);
}
.pg-banner .slide-image {
    width: 96%;
    display: block;
    margin: 0 auto;
    border-radius: 20rpx;
    overflow: hidden;
}
/**** banner-end ****/

/**** 内容块-start ****/
.pg-block {
    background: #fff;
    padding: 30rpx;
    margin: 24rpx 0;
    font-family: SanFranciscoDisplay-Regular;
    overflow: hidden;
    margin-top:0;
}
.pg-block-title {
    font-size: 0;
    letter-spacing: 0;
}
.pg-block-title .t-icon {
    display: inline-block;
    vertical-align: middle;
    width: 38rpx;
    height: 38rpx;
    margin-right: 10rpx;
}
.pg-block-title .t-icon.icon-mt10 {
    margin-top: 20rpx;
}
.pg-block-title > view {
    display: inline-block;
    vertical-align: middle;
    font-size: 30rpx;
    color: #acacac;
}
.pg-block-title > view > text {
    color: #383838;
    font-weight: bold;
}
.pg-block-title > view > text.text-em {
    font-size: 60rpx;
    color: #a088d4;
}
.pg-block-title > view > text.text-bold {
    color: #383838;
}
.pg-block-subtitle {
    font-size: 24rpx;
    color: #b8b8b8;
    padding-left: 51rpx;
}
.divider-line {
    border-bottom: 1rpx solid #E4E4E4;
}
.mg-b-8 {
    margin-bottom: 16rpx;
}
.mg-20 {
    margin: 40rpx 0;
}
.mg-30 {
    margin: 60rpx 0;
}

/**** 内容块-end ****/

/**** 按钮—start ****/
.pg-btn {
    width: 100%;
    height: 78rpx;
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    justify-content: center;
    -webkit-justify-content: center;
    color: #4DD0C8;
    font-size: 30rpx;
    border-radius: 80rpx;
    border: 1px solid #4DD0C8;
}
.pg-btn.btn-green {
    background: #4DD0C8;
    color: #fff;
}
.pg-btn .pg-btn-icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 10rpx;
}
.pg-btn .pg-btn-icon image {
    width: 100%;
    height: 100%;
}

.pg-btn-group {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
}
.pg-btn-group > view:nth-of-type(1) {
    flex: 2;
    -wekbit-flex: 2;
    margin-right: 50rpx;
}
.pg-btn-group > view:nth-of-type(2) {
    flex: 3;
    -webkit-flex: 3;
}

/**** 按钮—end ****/


/**** 第一个内容块-start ****/
.pg-b1-title {
    font-size: 32rpx;
    color: #999999;
}
.pg-b1-value {
    font-size: 60rpx;
    color: #FDC54A;
}
.pg-b1-sub {
    display: flex;
    display: -webkit-flex;
    margin-top: 30rpx;
}
.pg-b1-sub > view {
    width: 50%;
}
.pg-b1-subtitle {
    font-size: 30rpx;
    color: #999999;
}
.pg-b1-subvalue {
    font-size: 52rpx;
    color: #72B9E7;
}

/**** 第一个内容块-end ****/

/**** 第三个内容块-start ****/
.pg-cont-para {
    text-indent: 60rpx;
    font-size: 28rpx;
    line-height: 50rpx;
    color: #666;
}

.pg-level-title {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    font-size: 26rpx;
    color: #686868;
}
.pg-level-title > view {
    flex: 1;
    -webkit-flex: 1;
}
.pg-level-title > view:nth-of-type(2) {
    text-align: right;
}
.pg-list {
    margin: 20rpx 0;
    border-radius: 6rpx;
    padding: 10rpx 20rpx;
}
.pg-list.bg-gray {
    background: #F4F4F4;
}
.pg-list-item {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    font-size: 26rpx;
    color: #333;
    margin: 20rpx 0;
}
.pg-list-item > view {
    flex: 1;
    -webkit-flex: 1;
}
.pg-list-item > view:nth-of-type(2) {
    color: #888;
}
.pg-list-item .level-state {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    justify-content: flex-end;
    -webkit-justify-content: flex-end;
}
.pg-list-item .level-state .icon {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    margin-right: 8rpx;
}
.pg-list-item .level-state1 {
    color: #82DDB5
}
.pg-list-item .level-state1 .icon {
    background: #82DDB5
}
.pg-list-item .level-state2 {
    color: #FAA2C8
}
.pg-list-item .level-state2 .icon {
    background: #FAA2C8
}
.pg-list-item .level-state3 {
    color: #00A0E9;
}
.pg-list-item .level-state3 .icon {
    background: #00A0E9;
}
.pg-list-item .level-state4 {
    color: #999999
}
.pg-list-item .level-state4 .icon {
    background: #999999
}

.charts-sport {
    height: 400rpx;
}
.charts-physique {
    height: 600rpx;
    margin-top: 20rpx;
}
.charts-people {
    height: 400rpx;
    margin-bottom: 40rpx;
}

/**** 第三个内容块-end ****/
/* pages/My/Alter-Phone-number/Alter-Phone-number.wxss */

.Alter-Phone-number{
  width: 750rpx;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: middle;
}

.Alter-Name-input{
 width: 100%;
 height: 100rpx;
 line-height: 100rpx;
 vertical-align: middle;
 font-size: 28rpx;
 color: #333;
 margin-top: 20rpx;
 background-color: #fff;
 padding: 0 44rpx;
 box-sizing: border-box;
}

.Alter-Phone-number-input{
 width: 100%;
 height: 100rpx;
 line-height: 100rpx;
 vertical-align: middle;
 background-color: #fff;
 padding: 0 44rpx;
 box-sizing: border-box;
 border-top: 1rpx solid #e4e4e4;
 display: flex;
 justify-content: space-between;
 align-items: center;
}

.Alter-New-Password-input{
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  font-size: 28rpx;
  color: #333;
}

.verification-code{
  width: 20%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  font-size: 26rpx;
  color: #4DD0C8;
  text-align: center;
}

.input-cbcb{
  color: #999;
}

.Submit-button{
  width: 702rpx;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-sizing: border-box;
  justify-content: center;
  background-color: #4DD0C8;
  font-size: 30rpx;
  color: #fff;
  border-radius: 40rpx;
  position: fixed; 
  bottom: 60rpx;
}
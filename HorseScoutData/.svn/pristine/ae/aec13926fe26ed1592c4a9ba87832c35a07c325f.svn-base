/* pages/Exercise/Exercise-Program/Exercise-Program.wxss */

.Exercise-Program{
  width: 750rpx;
  line-height: 0;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.Exercise-Program-headline{
  width: 750rpx;
  height: 120rpx;
  background-color: #fff;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  white-space: nowrap;
}

.Exercise-Program-choose{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.Exercise-Program-choose-one{
  display: inline-block;
  min-width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
  text-align: center;
  font-size: 30rpx;
  padding: 0 22rpx;
  color: #fff;
  background-color: #4DD0C8;
  border-radius: 40rpx;
  margin-right: 55rpx;
  border:1rpx solid #4DD0C8;
}

.Exercise-Program-choose-two{
  display: inline-block;
  min-width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
  text-align: center;
  font-size: 30rpx;
  padding: 0 22rpx;
  color: #cbcbcb;
  background-color: #fff;
  border-radius: 40rpx;
  margin-right: 55rpx;
  border:1rpx solid #cbcbcb;
}

/*  锻炼计划列表  */

.Exercise-Program-List{
  width: 750rpx;
  margin: 0;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

.Exercise-Program-List-one{
  width: 100%;
  height: 330rpx;
  line-height: 330rpx;
  vertical-align: middle;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.List-one-background{
  width: 100%;
  height: 180rpx;
  line-height: 180rpx;
  vertical-align: middle;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  position: relative;
}

.exercise-img{
  width: 100%;
  height: 180rpx;
  line-height: 180rpx;
}

.Default{
  width: 105rpx;
  height: 108rpx;
  line-height: 108rpx;
  vertical-align: middle;
  position: absolute;
  left: 0;
  top: 1rpx;
}

.Completed-today{
  width: 130rpx;
  height: 130rpx;
  line-height: 130rpx;
  vertical-align: middle;
  position: absolute;
  right: 0;
  top: 115rpx;
  z-index: 111;
}

.List-one-section{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  vertical-align: middle;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  padding: 0 19rpx;
  box-sizing: border-box;
}

.List-one-section-one{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  vertical-align: middle;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 38rpx;
}

.section-one-green{
  color: #4DD0C8
}

.section-one-time-population{
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #000;
}

.section-one-time{
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  text-align: left;
}

.section-one-time-minute{
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  margin-left: 31rpx;
}

.section-one-population{
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  text-align: right;
  color: #F8C970;
}

.section-one-population-minute{
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  color: #999;
}

.add-coach{
  width: 100%;
  height: 130rpx;
  vertical-align: middle;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius:10px;
}

.add-coach-inset{
  width: 682rpx;
  height: 110rpx;
  line-height: 90rpx;
  vertical-align: middle;
  font-size: 28rpx;
  border:1rpx solid #4DD0C8;
  color: #4DD0C8;
  text-align: center;
  border-radius:10px;
}

.add-coach-inset-add{
  font-size: 42rpx;
}
/* pages/Information/Height-Weight/Height-Weight.wxss */

.Perfect-Information{
  width: 750rpx;
  line-height: 0;
  margin: 0;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.headline-Prompt{
  /* width: 702rpx; */
  width: 100%;
   padding: 60rpx 0; 
  height: 62rpx;
  line-height: 31rpx;
  font-size: 24rpx;
  color: #000;
  vertical-align: middle;
}

.headline-Prompt-blue{
  color: #4DD0C8;
  border-bottom: 1rpx solid #4DD0C8;
}

.Perfect-Information-Name{
  /* width: 702rpx; */
   width: 100%;
  height: 240rpx;
  /* padding: 0 24rpx; */
  display: flex;
  justify-content: space-between; 
  vertical-align: middle;
  margin-bottom: 40rpx;
  position: relative;
}

.Bargraph-yellow{
  width: 4rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #FDC54A;
  position: absolute;
  top: 40rpx;
  left: -2rpx;
}

.Perfect-Information-Name-section{
  width: 698rpx;
  height: 240rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.Name-section-headline{
  width: 698rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  font-size: 28rpx;
  color: #171717;
  margin-top: 60rpx;
  vertical-align: middle;
}

.family-relation{
  width: 698rpx;
  height: 153rpx;

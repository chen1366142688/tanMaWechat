.Baike{
    width: 100%;
    line-height: 0;
    margin: 0;
    padding: 0;
}
.select{
    border-bottom:1px solid #4DD0C8;
    color:#4DD0C8;
}
.Switch-one-text{
    border-bottom:1px solid #e4e4e4;
    color:#999999;
}
::-webkit-scrollbar{
    width:0px;
    height: 0px;;
}

.Baike-header{
    width: 100%;
    height: 90px;
    line-height: 90px;
    background-color: #fff;
    border-bottom: 1px solid #e4e4e4;
    display: flex;
    align-items: center;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    overflow-x: scroll;
    white-space: nowrap;
}

.Switch{
    display: inline-block;
    width: 100%;
    height: 90px;
    line-height: 90px;
    vertical-align: middle;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: space-between;
    -webkit-justify-content: space-between;
}

.Switch-one-text{
    display: inline-block;
    height: 86px;
    line-height: 86px;
    vertical-align: middle;
    text-align: center;
    font-size: 30px;
    margin: 0 47px;
    /*border-bottom: 1px solid #e4e4e4;*/
    /*color: #999999;*/
}

.Switch-one{
    display: inline-block;
    width: 149px;
    height: 89px;
    line-height: 89px;
    vertical-align: middle;
    text-align: center;
    align-items: center;
    justify-content: center;
}


.Baike-section{
    width: 100%;
    margin: 0;
    padding: 0 25px;
    box-sizing: border-box;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.Baike-section-one{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.Baike-section-one-text-p{
    width: 100%;
    line-height: 36px;
    margin: 37px 0;
    font-size: 26px;
    color: #171717;
}

.Baike-section-one-images{
    width: 100%;
    height: 100%;
    vertical-align: middle;
}

/* pages/My/alter-Name/alter-Name.wxss */

page {
  background-color: #fff;
}

.alter-Name {
  width: 750rpx;
  height: 100rpx;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.alter-input {
  width: 100%;
  height: 100rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.input {
  width: 100%;
  height: 100rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 10rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.preserve {
  width: 690rpx;
  height: 100rpx;
  background: rgba(2, 199, 220, 1);
  border-radius: 50rpx;
  position: fixed;
  bottom: 100rpx;
  font-size: 34rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 254, 254, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.Send {
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(2, 199, 220, 1);
}

.login-password {
  width: 100%;
  height: 100rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.login-password-input {
  width: 100%;
  height: 100rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 10rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.preserve {
  width: 690rpx;
  height: 100rpx;
  background: rgba(2, 199, 220, 1);
  border-radius: 50rpx;

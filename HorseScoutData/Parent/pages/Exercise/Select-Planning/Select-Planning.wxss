/* pages/Exercise/Select-Planning/Select-Planning.wxss */

.Select-Planning{
  width: 750rpx;
  line-height: 0;
  vertical-align: middle;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.Select-headline{
  width: 100%;
  height: 340rpx;
  line-height: 340rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  background-color: #fff;
  vertical-align: middle;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
}

.Select-section-left{
  width: 20%;
  height: 340rpx;
  line-height: 340rpx;
  vertical-align: middle;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* border-right: 1rpx solid #e4e4e4; */
}

.degree-difficulty{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.equipment{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.type{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: middle;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.Select-section-right{
  width: 80%;
}
.allItem{
  min-width: 140rpx;
  height:60rpx;
  line-height: 60rpx;
  padding:0 10rpx;
  margin-right:30rpx;
  font-size:28rpx;
  text-align: center;
  font-family:PingFang-SC-Regular;
  background:rgba(203,203,203,1);
  border-radius: 30rpx;
  color: #fff;
}
.active{
  background:#4DD0C8;
}


.Select-Planning-section{
  width: 750rpx;
  margin: 0;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
}

.Exercise-Program-List-one{
  width: 100%;
  height: 330rpx;
  line-height: 330rpx;
  vertical-align: middle;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.List-one-background{
  width: 100%;
  height: 180rpx;
  line-height: 180rpx;
  vertical-align: middle;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  position: relative;
}

.exercise-img{
  width: 100%;
  height: 180rpx;
  line-height: 180rpx;
}

.Default{
  width: 105rpx;
  height: 108rpx;
  line-height: 108rpx;
  vertical-align: middle;
  position: absolute;
  left: 0;
  top: 0;
}

.Completed-today{
  width: 130rpx;
  height: 130rpx;
  line-height: 130rpx;
  vertical-align: middle;
  position: absolute;
  right: 0;
  top: 115rpx;
  z-index: 111;
}

.List-one-section{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  vertical-align: middle;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  padding: 0 19rpx;
  box-sizing: border-box;
}

.List-one-section-one{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  vertical-align: middle;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 38rpx;
}

.section-one-green{
  color: #4DD0C8
}

.section-one-time-population{
  width: 100%;
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: #000;
}

.section-one-time{
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  text-align: left;
}

.section-one-time-minute{
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  margin-left: 31rpx;
}

.section-one-population{
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  text-align: right;
  color: #F8C970;
}

.section-one-population-minute{
  height: 75rpx;
  line-height: 75rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  color: #999;
}
.difficulty,.allEquipment,.allType{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  white-space: nowrap;
  justify-content: space-around;
}
.equipments{
  width:30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left:22rpx;
}